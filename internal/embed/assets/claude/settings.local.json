{
  "permissions": {
    "allow": [
      "Bash(echo:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAW_BIN} internal stop-hook",
            "timeout": 20
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAW_BIN} internal user-prompt-submit-hook",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "${PAW_BIN} internal ask-user-question-hook",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
